<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>

<VBox styleClass="main-screen" spacing="30.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tmdna.PrimaryController">
   <padding>
      <Insets top="30" right="30" bottom="30" left="30" />
   </padding>
   <children>
      <!-- Control Section -->
      <VBox styleClass="control-section" alignment="TOP_CENTER" spacing="20.0">
         <Label text="Availability Status" styleClass="section-title" />
         <VBox styleClass="control-wrapper" alignment="CENTER" spacing="15.0">
            <Label fx:id="timerLabel" text="00:00:00" styleClass="timer-label" />
            <HBox alignment="CENTER" spacing="10.0">
               <Label fx:id="downtimeLabel" text="" styleClass="downtime-info-label" />
               <Label fx:id="statusLabel" styleClass="status-label" />
            </HBox>
            <Button fx:id="primaryButton" text="Switch to Unavailable" onAction="#toggleElectricity" styleClass="toggle-button" />
         </VBox>
      </VBox>

      <!-- Divider -->
      <VBox styleClass="divider" />

      <!-- Activity Section -->
      <VBox styleClass="activity-section" alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
        <HBox maxWidth="640" alignment="CENTER">
            <Label text="History"
               styleClass="section-title"
               HBox.hgrow="ALWAYS" />

            <Region HBox.hgrow="ALWAYS" />

            <Button text="Clean History"
                onAction="#cleanHistory"
                styleClass="clean-button" />
         </HBox>
         <TextArea fx:id="activityTextArea" wrapText="true" editable="false" styleClass="activity-text" VBox.vgrow="ALWAYS" />
      </VBox>
   </children>
</VBox>