<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>

<VBox styleClass="main-screen" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tmdna.PrimaryController">
   <padding>
      <Insets top="15" right="15" bottom="15" left="15" />
   </padding>
   <children>
      <!-- Control Section -->
      <VBox styleClass="control-section" alignment="TOP_CENTER" spacing="10.0">
         <Label text="Availability Status" styleClass="section-title" />
         <VBox styleClass="control-wrapper" alignment="CENTER" spacing="3.0">
            <Label fx:id="timerLabel" text="00:00:00" styleClass="timer-label" />
            <HBox alignment="CENTER" spacing="3.0">
               <Label fx:id="downtimeLabel" text="" styleClass="downtime-info-label" />
               <Label fx:id="statusLabel" styleClass="status-label" />
            </HBox>
            <Button fx:id="primaryButton" text="Switch to Unavailable" onAction="#toggleElectricity" styleClass="toggle-button" />
            <Button fx:id="toggleHistoryButton" onAction="#toggleHistory" styleClass="toggle-history-button" text="â–¼" />
         </VBox>
      </VBox>

      <!-- History Section -->
      <VBox fx:id="historyDivider" styleClass="divider" visible="false" managed="false"/>
      <VBox fx:id="historyContent" styleClass="history-section" alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS" visible="false" managed="false">
        <HBox maxWidth="640" alignment="CENTER">
            <Label text="History"
               styleClass="section-title"
               HBox.hgrow="ALWAYS" />

            <Region HBox.hgrow="ALWAYS" />
            
            <Button text="Clean History"
                onAction="#cleanHistory"
                styleClass="clean-button" />
         </HBox>
         <VBox VBox.vgrow="ALWAYS" alignment="CENTER">
            <TextArea fx:id="historyTextArea" wrapText="true" editable="false" styleClass="activity-text" VBox.vgrow="ALWAYS" />
        </VBox>
      </VBox>
   </children>
</VBox>